{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "tool == \"Edit\" || tool == \"Write\"",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/scripts/warn-generated.sh"
          }
        ],
        "description": "Warn when editing generated files"
      },
      {
        "matcher": "tool == \"Edit\" || tool == \"Write\"",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/scripts/warn-env.sh"
          }
        ],
        "description": "Warn when editing .env files"
      },
      {
        "matcher": "tool == \"Bash\"",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/scripts/warn-shioaji-env.sh"
          }
        ],
        "description": "Warn when Shioaji creds may be missing"
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/memory-persistence/session-start.sh"
          }
        ],
        "description": "Persist session start snapshot"
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/memory-persistence/pre-compact.sh"
          }
        ],
        "description": "Persist snapshot before compaction"
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/evals/evaluate-session.sh"
          }
        ],
        "description": "Evaluate session for common workflow issues"
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "hooks/memory-persistence/session-end.sh"
          }
        ],
        "description": "Persist session end snapshot"
      }
    ]
  }
}
