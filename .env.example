# Copy to .env and adjust (never commit .env)
SHIOAJI_PERSON_ID=
SHIOAJI_API_KEY=
SHIOAJI_SECRET_KEY=

# CA activation (required for live trading)
# CA_CERT_PATH=/path/to/Sinopac.pfx
# CA_PASSWORD=your_ca_password
# SHIOAJI_ACTIVATE_CA=1

# Optional symbols config override
SYMBOLS_CONFIG=config/symbols.yaml
# Optional metrics file for advanced rule filters
HFT_SYMBOL_METRICS=config/metrics.json

# Run mode overrides (optional)
HFT_MODE=sim
HFT_ENV=dev
HFT_SYMBOLS=2330

# Order client mode (keep orders in simulation when running real data)
# HFT_ORDER_MODE=sim
# HFT_ORDER_NO_CA=1

# Latency tracing (pipeline spans + metrics)
# HFT_LATENCY_TRACE=1
# HFT_LATENCY_SAMPLE_EVERY=10
# HFT_LATENCY_METRICS=1

# Observability
HFT_PROM_PORT=9090
# HFT_PROM_ADDR=0.0.0.0
# Market data logging (disable by default for performance)
# HFT_MD_LOG_RAW=1
# HFT_MD_LOG_EVERY=1000
# HFT_MD_LOG_NORMALIZED=1
# HFT_MD_LOG_NORMALIZED_EVERY=1000

# Quote resubscribe cooldown (seconds)
# HFT_RESUBSCRIBE_COOLDOWN=1.5

# Reconnect window (market hours, local exchange time)
HFT_RECONNECT_DAYS=mon,tue,wed,thu,fri
HFT_RECONNECT_HOURS=08:30-14:00
HFT_RECONNECT_HOURS_2=08:00-08:30
HFT_RECONNECT_TZ=Asia/Taipei
HFT_TS_TZ=Asia/Taipei

# Storage
# Set to 1 to enable ClickHouse (ensure host/port reachable)
HFT_CLICKHOUSE_ENABLED=0
HFT_CLICKHOUSE_HOST=localhost
HFT_CLICKHOUSE_PORT=8123
# ClickHouse auth (used by ClickHouse + app services)
HFT_CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=changeme
# ClickHouse storage paths (optional)
# CH_DATA_HOT=./data/clickhouse/hot
# CH_DATA_COLD=./data/clickhouse/cold
# HFT_CH_DATA_ROOT=./data/clickhouse
# Set to disable explicitly (overrides enabled flag)
# HFT_DISABLE_CLICKHOUSE=1

# Docker service passwords (required for docker-compose)
REDIS_PASSWORD=changeme
GRAFANA_ADMIN_PASSWORD=changeme
